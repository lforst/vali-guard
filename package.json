{
    "name": "vali-guard",
    "version": "0.0.1",
    "description": "A proof-of-concept validation library with TypeScript type-safety.",
    "keywords": [
        "validation",
        "schema",
        "typescript",
        "typesafe",
        "typeguards"
    ],
    "homepage": "https://github.com/lforst/vali-guard#readme",
    "bugs": {
        "url": "https://github.com/lforst/vali-guard/issues"
    },
    "license": "MIT",
    "author": "Luca Forstner (https://github.com/lforst)",
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "module": "dist/vali-guard.esm.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/lforst/vali-guard.git"
    },
    "scripts": {
        "watch": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "typings": "tsc --noEmit --rootDir test/type-definition-tests/**/*.ts",
        "lint": "run-p lint:eslint lint:prettier",
        "lint:eslint": "eslint . --max-warnings=0",
        "lint:prettier": "prettier --check \"{src,test}/**/*.ts\"",
        "fix": "run-s fix:eslint fix:prettier",
        "fix:eslint": "eslint . --format stylish --fix",
        "fix:prettier": "prettier --write \"{src,test}/**/*.ts\"",
        "prepare": "tsdx build && husky install",
        "size": "size-limit"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.3",
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.3.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "npm-run-all": "^4.1.5",
        "size-limit": "^7.0.4",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.3"
    },
    "engines": {
        "node": ">=10"
    }
}
